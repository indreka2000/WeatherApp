<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_colour">



    <ListView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/menu_ribbon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"></View>

    <ImageButton
        android:id="@+id/homeScreenButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/userScreenButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeScreenButton" />

    <ImageButton
        android:id="@+id/historyScreenButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchScreenButton" />

    <ImageButton
        android:id="@+id/searchScreenButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view" />

    <TextView
        android:id="@+id/buttonTextHome"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Home"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeScreenButton"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/buttonTextHistory"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="History"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonTextSearch" />

    <TextView
        android:id="@+id/buttonTextSearch"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Search"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/buttonTextUser"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="User"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonTextHome" />

</androidx.constraintlayout.widget.ConstraintLayout>